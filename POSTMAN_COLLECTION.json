{
  "info": {
    "name": "Bookstore Management API",
    "description": "RESTful API for Bookstore Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "my_secure_token",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Inventory",
      "item": [
        {
          "name": "List All Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/books",
              "host": ["{{base_url}}"],
              "path": ["api", "books"]
            }
          }
        },
        {
          "name": "Get Book Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/books/123",
              "host": ["{{base_url}}"],
              "path": ["api", "books", "123"]
            }
          }
        }
      ]
    },
    {
      "name": "Sales",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_id\": \"cust_001\",\n  \"books\": [\n    {\n      \"book_id\": \"123\",\n      \"quantity\": 2\n    }\n  ],\n  \"payment_method\": \"credit_card\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders",
              "host": ["{{base_url}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get Order Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/orders/order_1",
              "host": ["{{base_url}}"],
              "path": ["api", "orders", "order_1"]
            }
          }
        }
      ]
    },
    {
      "name": "Delivery",
      "item": [
        {
          "name": "Create Delivery",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_id\": \"order_1\",\n  \"address\": \"123 Main St, City, State 12345\",\n  \"estimated_delivery_date\": \"2024-12-31\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/deliveries",
              "host": ["{{base_url}}"],
              "path": ["api", "deliveries"]
            }
          }
        },
        {
          "name": "Get Delivery Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/deliveries/del_1",
              "host": ["{{base_url}}"],
              "path": ["api", "deliveries", "del_1"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ]
}
